        15: Team_3_Nametags
        16: Team_4_Nametags
        17: Array_Of_Nametags
        18: Player_Index
        19: Tertiary_Player_Index
        20: Array_Of_Teams
        21: Array_Of_Team_Counts
        22: Selector
        23: In_Team_Mode
    player:
        0: Target
        1: Team_Membership
        2: Team_Index
        3: Index
        4: Membership_Index
        5: Secondary_Player_Index
        6: Smallest_Team
        7: Had_Final_Blow
        8: Team_Assist_Victim
}
